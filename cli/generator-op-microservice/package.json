{
  "name": "generator-op-microservice",
  "version": "0.0.0",
  "description": "This is a Yeoman Generator for One Platform Microservice Generator",
  "homepage": "https://yeoman.io/",
  "author": {
    "name": "Diwanshi Pandey",
    "email": "diwanshipandey@gmail.com"
  },
  "contributors": [
    {
      "name": "Rigin Oommen",
      "email": "riginoommen@gmail.com",
      "url": "https://github.com/riginoommen"
    }
  ],
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "devDependencies": {
    "yeoman-test": "3.0.0",
    "yeoman-assert": "3.1.1",
    "eslint": "7.21.0",
    "prettier": "2.2.1",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-config-xo": "0.35.0",
    "jest": "26.6.3"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "yeoman-generator": "^4.0.0",
    "yo": "^3.1.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest"
  },
  "repository": "https://github.com/1-Platform/one-platform",
  "license": "MIT"
}
