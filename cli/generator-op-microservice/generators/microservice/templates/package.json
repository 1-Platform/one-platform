{
  "name": "<%= serviceName %>",
  "description": "<%= serviceClassName %> micro-service for One Platform",
  "opservice": {
    "className": "<%= serviceClassName %>",
    "serviceName": "<%= serviceName %>"
  },
  "version": "<%= serviceVersion %>",
  "keywords": [
    "web-components",
    "html"
  ],
  "repository": {
    "type": "git",
    "url": "github:1-Platform/one-platform",
    "directory": "packages/<%= packageName %>"
  },
  "publishConfig": {
    "access": "private"
  },
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --forceExit",
    "build:dev": "webpack --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack --watch --config webpack.dev.js"
  },
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>"
  },
  "contributors": [],
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.7.0",
    "ejs": "^3.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    <% if (graphqlSupport) { -%>
      "graphql": "^14.3.1",
      "graphql-tools": "^4.0.4",
      "graphql-redis-subscriptions": "^2.1.1",
      "apollo-log": "^0.1.0",
      "apollo-server-express": "^2.10.1", <%
    } -%>
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    <% if (dbSupport) { -%>
    "mongoose": "^5.5.11",<%
    } -%>
    "morgan": "^1.9.1",
    "nodemon-webpack-plugin": "^4.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.2.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.5",
    "@types/ejs": "3.0.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.8",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.133",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^5.2.7",
    <% if (dbSupport) { -%>
    "@types/mongoose": "^5.5.3",<%
    } -%>
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.4",
    "@types/supertest": "^2.0.7",
    <% if (graphqlSupport) { -%>
    "graphql-tag": "^2.10.3",<%
    } -%>
    "husky": "^2.3.0",
    "jest": "^25.1.0",
    <% if (graphqlSupport) { -%>
    "jest-transform-graphql": "^2.1.0",<%
    } -%>
    "ts-loader": "^6.2.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "bugs": {
    "url": "https://github.com/1-Platform/one-platform/issues?q=is%3Aissue+is%3Aopen+<%= packageName %>"
  },
  "generator-op-microservice-version": "<%= generatorOPMicroserviceVersion %>"
}
